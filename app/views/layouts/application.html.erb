<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    
    <header>

     <div>
        <a href="/">
          <img src="/assets/logo_grey.png" alt="ipeロゴ">
        </a>
      </div>

      <ul>
         <% if current_user %>
          <li><a href="#">LOGOUT</a></li>
        <% else %>
          <li><%= link_to "SIGNUP", signup_path %></li>
          <li><%= link_to "LOGIN", login_path %></li>
        <% end %>
      </ul>
    </header>
    <% if notice %>
      <p class="flash"><%= notice %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
